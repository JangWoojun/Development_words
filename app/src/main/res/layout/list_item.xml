<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/wordBox"
        android:background="#ecec52"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_text1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="단어"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/list_item_text2"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:text="@string/list_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/list_item_text3"
            android:orientation="vertical"
            android:background="#ecec52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:text="@string/list_item_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/list_item_text4"
                android:layout_marginTop="10dp"
                android:text="어쩌구 저쩌구 설명 설명 해당 단어를 설명합니다 단어를 설명하는 내용입니다"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>