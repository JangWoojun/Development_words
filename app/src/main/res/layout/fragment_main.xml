<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404258"
    tools:context=".fragment.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15sp"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_text"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="80sp"
                    android:layout_marginStart="40sp"
                    android:layout_height="80sp"
                    android:background="@drawable/radius_white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rocket_4311575"
                        android:contentDescription="@string/rocket" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="70sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/radius_red">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_study_word_text"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/goal_learning_text"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/lottieAnimationView"
                        app:layout_constraintHorizontal_bias="0.4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <ProgressBar
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="70sp"
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:progress="3"
                        android:progressBackgroundTint="@color/white"
                        android:progressTint="#B892FF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        tools:layout_editor_absoluteX="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progressbar_text"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.35"
                        app:layout_constraintStart_toEndOf="@+id/progressBar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.03" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationView"
                        android:layout_width="170sp"
                        android:layout_height="170sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="human.json"
                        app:lottie_loop="true"
                        app:lottie_url="@raw/human" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="650sp">

                <LinearLayout
                    android:layout_marginEnd="30sp"
                    android:id="@+id/linearLayout"
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/radius_red"
                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="300sp"
                        android:layout_height="300sp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="c.json"
                        app:lottie_loop="true"
                        app:lottie_url="@raw/c" />


                </LinearLayout>


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="@string/cs_words"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:layout_marginTop="75dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/radius_red"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="300sp"
                        android:layout_height="300sp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="b.json"
                        app:lottie_loop="true"
                        app:lottie_url="@raw/b" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="@string/cs_study"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout2" />


                <LinearLayout
                    android:layout_marginEnd="30sp"
                    android:id="@+id/linearLayout3"
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/radius_red"
                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="a.json"
                        app:lottie_loop="true"
                        app:lottie_url="@raw/a" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english_words"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout3"/>


                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_marginTop="30sp"
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:background="@drawable/radius_red"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_marginBottom="15sp"
                        android:layout_width="250sp"
                        android:layout_height="250sp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="quiz.json"
                        app:lottie_loop="true"
                        app:lottie_url="@raw/quiz" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english_study"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout5"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#404258"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:baselineAligned="false">


        <LinearLayout
            android:id="@+id/home"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:src="@drawable/home_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/home" />

            <TextView
                android:layout_gravity="center"
                android:text="@string/home_text"
                android:textColor="#D7263D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/words"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:src="@drawable/words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/words_icon" />

            <TextView
                android:layout_gravity="center"
                android:text="@string/words"
                android:textColor="#c8c8c8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/learning"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:src="@drawable/learning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/study" />

            <TextView
                android:layout_gravity="center"
                android:text="@string/study_text"
                android:textColor="#c8c8c8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:src="@drawable/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/setting" />

            <TextView
                android:layout_gravity="center"
                android:text="@string/setting_text"
                android:textColor="#c8c8c8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>